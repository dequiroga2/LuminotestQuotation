{
  "version": 2,
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "ignoreCommand": "exit 0",
  "functions": {
    "api/index.ts": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "routes": [
    { "handle": "filesystem" },
    {
      "src": "/(.*)",
      "dest": "/api/index"
    }
  ]
}
