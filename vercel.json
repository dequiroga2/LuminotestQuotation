{
  "version": 2,
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "outputDirectory": "dist/public",
  "functions": {
    "api/index.ts": {
      "maxDuration": 30
    }
  },
  "routes": [
    { "handle": "filesystem" },

    { "src": "/api/(.*)", "dest": "/api/index" },

    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
